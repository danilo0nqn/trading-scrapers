# DEX Scalping Monitor - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# REQUIRED: RPC URLs for Blockchain Access
# ============================================

# Ethereum (Uniswap V3) - Alchemy recommended
# Get your API key at: https://www.alchemy.com
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY_HERE

# BSC (PancakeSwap) - Can use public RPC or QuickNode
# Public RPC: https://bsc-dataseed.binance.org/
# QuickNode: https://www.quicknode.com/chains/bsc
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Optional: Backup RPC URLs for failover
# ETHEREUM_RPC_BACKUP=
# BSC_RPC_BACKUP=

# ============================================
# MONITORING SETTINGS (Optional)
# ============================================

# Price change threshold to trigger alert (%)
PRICE_CHANGE_THRESHOLD=5.0

# Minimum ROI to consider an opportunity viable (%)
MIN_ROI_THRESHOLD=10.0

# Monitoring interval in seconds
MONITOR_INTERVAL=60

# Number of top pairs to monitor per DEX
TOP_PAIRS_LIMIT=50

# Historical data retention (days)
HISTORY_RETENTION_DAYS=30

# ============================================
# GAS SETTINGS (Optional)
# ============================================

# Maximum gas price to consider (in Gwei)
MAX_GAS_PRICE_GWEI=100

# Gas limit for swap transactions
GAS_LIMIT_SWAP=200000

# Trade amount for ROI calculation (in USD)
TRADE_AMOUNT_USD=1000.0

# ============================================
# ALERT SETTINGS (Optional)
# ============================================

# Enable sound alerts
ENABLE_SOUND_ALERTS=true

# Enable console alerts (bell character)
ENABLE_CONSOLE_ALERTS=true

# Minimum time between alerts for same pair (seconds)
ALERT_COOLDOWN=300

# ============================================
# FILE PATHS (Optional)
# ============================================

# Path to store opportunity history
HISTORY_FILE=data/opportunities_history.csv

# Path to store logs
LOG_FILE=logs/dex_monitor.log
